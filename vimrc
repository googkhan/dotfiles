set number

" Disable arrow keys in Normal and Insert mode
no <Up> <Nop>
no <Down> <Nop>
no <Left> <Nop>
no <Right> <Nop>
ino <Up> <Nop>
ino <Down> <Nop>
ino <Left> <Nop>
ino <Right> <Nop>

set laststatus=2
syntax on
set relativenumber
" Tablari bosluklarla degistir
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4

" Mouse scroll
set mouse=nicr
